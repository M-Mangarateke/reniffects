@model dynamic
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero">
    <div class="hero-video-wrapper">
        <video class="hero-video" autoplay muted loop playsinline>
            <source src="/videos/fx_hero.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>

        <!-- Overlay Container -->
        <div class="video-overlay-action">
            <div class="intro-overlay">
                <h1 class="glow-text">Welcome to reniffects</h1>
                <p>
                    Bringing stories to life through
                    <span class="glow-accent">VFX</span> &
                    <span class="glow-accent-purple">Direction</span>
                </p>
                <button class="explore-button" onclick="document.getElementById('about').scrollIntoView({ behavior: 'smooth' });">
                    Explore ↓
                </button>
            </div>
        </div>
    </div>
</section>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        const video = document.querySelector(".hero-video");
        if (video) {
            video.muted = true;
            video.play().catch((e) => {
                console.warn("Autoplay failed:", e);
            });
        }
    });
</script>
</section>


<!-- About Us Section -->
<section class="about-section" id="about">
    <div class="about-container">
        <div class="about-card">
            <img src="~/images/reni_main_pic.jpg" alt="Main portrait" />
        </div>
        <div class="about-text">
            <h2 class="glow-heading-blue">About Me</h2>
            <p>I’m <strong>Oreneile Machitje</strong>, a VFX creative and visual storyteller based in Johannesburg. Currently completing my final year at <strong>AFDA</strong>.</p>
            <p>I specialize in <strong>Visual Effects (VFX)</strong> and have directed short films, including my work with <em>Cloud 9 Studios</em> on the film <strong>SABELA</strong>.</p>
        </div>
    </div>
</section>

<!-- Portfolio Section -->
<section class="portfolio-section" id="portfolio">
    <h2 class="glow-heading">Visual Portfolio</h2>
    <div class="portfolio-grid">
        <div class="portfolio-card"><img src="~/images/reniffects_poster_project1.jpg" alt="Timeless Poster" /></div>
        <div class="portfolio-card"><img src="~/images/reniffects_poster_project2.jpg" alt="Doechi" /></div>
        <div class="portfolio-card"><img src="~/images/reniffects_poster_project3.jpg" alt="Uncle Waffles Poster" /></div>
    </div>
</section>

<!-- Film Projects Section -->
<section class="film-section" id="projects">
    <div class="film-container">
        <div class="film-text">
            <h2 class="glow-heading-blue">Film Projects</h2>
            <p>Studying a <strong>bachelors in motion picture</strong>, I am a South African filmmaker with a passion to make my mark in the industry.</p>
            <p>My creative practice explores emotional honesty, identity, and psychological depth through sound and symbolism.</p>
            <p>One of my proudest moments was directing <strong>"SABELA"</strong> as part of <em>Cloud 9 Studios</em>, officially presented at AFDA.</p>
        </div>
        <div class="film-images">
            <img src="~/images/film_equipment.jpg" alt="equipment" />
